<?xml version="1.0"?>
<odoo>
<data>
    
    
    <act_window id="ranchy.action_window"  name="ranchy"  view_mode="tree,form"/>
    
    
    
    <menuitem action="ranchy.action_window" name="ranchy" id="ranchy.menu_root" sequence ="450"/>
    <menuitem action="ranchy.action_window" name="Members" id="ranchy.members" parent="ranchy.menu_root"/>
    
    
    <record id= "ranchy_members_template_form_view" model= "ir.ui.view">
   
   <field name="model">members.ranchy</field >
   <field name="arch" type= "xml">
        
           <form>
             <group>
             <field name="member_pic" widget='image' />
             <field name="member_firstname"/>
             <field name="member_lastname"/>
             <field name="member_addresss"/>
             <field name="member_phone"/>
             <field name="memberof"/>
             </group>
             
           
           </form>
         
   </field>
   </record>
   
   <!--  List View Definition for coperatives-->
<record id="view_corps_ranchy_tree" model="ir.ui.view">
    <field name="name">ranchy_tree</field>
    <field name="model">corps.ranchy</field>
    <field name="arch" type="xml">
        <tree string="ranchy corps">
            <!-- Add All Fields You Want In The List Here -->
            <field name="corps_name"/>
        </tree>
    </field>
</record>

<!-- Your Form View Definition -->
<record id="view_ranchy_corps_form" model="ir.ui.view">
    <field name="name">ranchy_form</field>
    <field name="model">corps.ranchy</field>
    <field name="arch" type="xml">
        <form string="Form ranchy corps" version="7.0">
            <!-- Add All Fields You Want In The Form Here -->
            <field name="corps_name"/>
            
            
        </form>
    </field>
</record>

<!-- Your Action Window Definition -->
<record id="action_ranchy2" model="ir.actions.act_window">
    <field name="name">ranchy</field>
    <field name="res_model">corps.ranchy</field>
    <field name="view_type">form</field>
    <field name="view_mode">list,form</field>
</record>

<!-- Action Menu Item Related To Above Action Window -->
<menuitem 
action="action_ranchy2" 
id="action_menu_ranchy2" 
parent="ranchy.menu_root"
name="coperative" 
sequence="2"/>
 
<!--  List View Definition for Loans-->
<record id="view_loans_ranchy_tree" model="ir.ui.view">
    <field name="name">ranchy_loans_tree</field>
    <field name="model">ranchy.loans</field>
    <field name="arch" type="xml">
        <tree string="ranchy loans">
            <!-- Add All Fields You Want In The List Here -->
            <field name="member_id"/>
            <field name="amount"/>
            <field name="disburse_date"/>
            
            <field name="stage"/>
        </tree>
    </field>
</record>

<!-- Your Form View Definition -->
<record id="view_ranchy_loans_form" model="ir.ui.view">
    <field name="name">ranchy_loans_form</field>
    <field name="model">ranchy.loans</field>
    <field name="arch" type="xml">
        <form string="Form ranchy corps" version="7.0">
            <!-- Add All Fields You Want In The Form Here -->
            <field name="member_id"/>
            <field name="amount"/>
            <field name="disburse_date"/>
            
            <field name="stage"/>
            
            
        </form>
    </field>
</record>

<!-- Your Action Window Definition -->
<record id="action_ranchyloans" model="ir.actions.act_window">
    <field name="name">ranchy</field>
    <field name="res_model">ranchy.loans</field>
    <field name="view_type">form</field>
    <field name="view_mode">list,form</field>
</record>

<!-- Action Menu Item Related To Above Action Window -->
<menuitem 
action="action_ranchyloans" 
id="action_menu_ranchyloans" 
parent="ranchy.menu_root"
name="loans" 
sequence="2"/>
        
</data>
</odoo>